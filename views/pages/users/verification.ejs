<!-- Email Verification Page -->
<div class="bg-primary text-white py-4">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-md-8">
        <h1 class="fw-bold">Email Verification</h1>
        <p class="lead mb-0">Verify your email address to access all features</p>
      </div>
      <div class="col-md-4 text-md-end">
        <a href="/dashboard" class="btn btn-light">
          <i class="fas fa-tachometer-alt me-2"></i> Back to Dashboard
        </a>
      </div>
    </div>
  </div>
</div>

<!-- Verification Content -->
<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card border-0 shadow-sm">
        <div class="card-body p-5 text-center">
          <div class="verification-status mb-4">
            <% if (user.isVerified) { %>
              <div class="verification-icon bg-success rounded-circle mx-auto mb-3">
                <i class="fas fa-check text-white"></i>
              </div>
              <h3 class="mb-2">Email Verified</h3>
              <p class="text-muted mb-0">Your email address has been successfully verified. You now have full access to all features.</p>
            <% } else { %>
              <div class="verification-icon bg-warning rounded-circle mx-auto mb-3">
                <i class="fas fa-exclamation text-white"></i>
              </div>
              <h3 class="mb-2">Verification Required</h3>
              <p class="text-muted mb-4">Please verify your email address to unlock all features including wallet recovery services.</p>
              
              <% if (resendSuccess) { %>
                <div class="alert alert-success" role="alert">
                  <i class="fas fa-check-circle me-2"></i> Verification email has been resent successfully!
                </div>
              <% } %>
              
              <div class="verification-instructions bg-light p-4 rounded text-start mb-4">
                <h5 class="mb-3">To verify your email:</h5>
                <ol class="mb-0">
                  <li class="mb-2">Check your inbox for an email from us</li>
                  <li class="mb-2">Click the verification link in the email</li>
                  <li>If you can't find the email, check your spam folder</li>
                </ol>
              </div>
              
              <p class="mb-4">Didn't receive the verification email?</p>
              <form action="/users/resend-verification" method="POST">
                <button type="submit" class="btn btn-primary">
                  <i class="fas fa-paper-plane me-2"></i> Resend Verification Email
                </button>
              </form>
            <% } %>
          </div>
          
          <% if (user.isVerified) { %>
            <div class="mt-4">
              <a href="/wallets/new" class="btn btn-primary me-2">
                <i class="fas fa-plus me-2"></i> Create Recovery Request
              </a>
              <a href="/dashboard" class="btn btn-outline-primary">
                <i class="fas fa-tachometer-alt me-2"></i> Go to Dashboard
              </a>
            </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .verification-icon {
    width: 70px;
    height: 70px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 28px;
  }
</style> 