<!-- Blog Category Header -->
<div class="bg-primary text-white py-5">
  <div class="container">
    <div class="row justify-content-center text-center">
      <div class="col-lg-8">
        <h1 class="fw-bold mb-3">Blog Category: <%= category %></h1>
        <p class="lead">Browse our articles about <%= category.toLowerCase() %> and wallet recovery</p>
      </div>
    </div>
  </div>
</div>

<!-- Blog Category Content -->
<div class="container py-5">
  <div class="row">
    <!-- Main Content -->
    <div class="col-lg-8">
      <!-- Category Description -->
      <div class="bg-light p-4 rounded-3 mb-4">
        <% if (category === 'Wallet Security') { %>
          <p class="mb-0">Articles focused on securing your cryptocurrency wallets against threats, implementing best practices, and understanding security vulnerabilities.</p>
        <% } else if (category === 'Recovery Guides') { %>
          <p class="mb-0">Step-by-step guides for recovering different types of cryptocurrency wallets and addressing common access issues.</p>
        <% } else if (category === 'Case Studies') { %>
          <p class="mb-0">Real-world examples of successful wallet recovery operations, detailing the challenges faced and solutions implemented.</p>
        <% } else if (category === 'News & Updates') { %>
          <p class="mb-0">Latest developments in cryptocurrency wallet technology, security updates, and industry news relevant to wallet owners.</p>
        <% } else if (category === 'Tips & Tricks') { %>
          <p class="mb-0">Practical advice and lesser-known techniques for managing, securing, and recovering cryptocurrency wallets.</p>
        <% } else { %>
          <p class="mb-0">Articles related to <%= category.toLowerCase() %> aspects of cryptocurrency wallet management and recovery.</p>
        <% } %>
      </div>
      
